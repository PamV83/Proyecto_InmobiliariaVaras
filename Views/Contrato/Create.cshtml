@model Proyecto_InmobiliariaVaras.Models.Contrato

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear Contrato</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato" class="form-control" />
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIn" class="control-label"></label>
                <input asp-for="FechaIn" class="form-control" />
                <span asp-validation-for="FechaIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccionar Inquilino</label>
                <select class="form-control" name="IdInquilino">
                    @foreach (var item in (IList<Inquilino>)ViewBag.Inquilino)
                    {

                    <option value="@item.Id">@(item.Nombre + " " + item.Apellido)</option>

}
                </select>
                <span asp-validation-for="IdInquilino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccionar Inmueble</label>
                <select class="form-control" name=" IInmueble">
                    @foreach (var item in (IList<Inmueble>)ViewBag.Inmueble) 
                    {
                    
                    <option value="@item.IdInmueble">@(item.DireccionInmueble + " ")</option>
                        
                    }
                </select>
                <span asp-validation-for="IdInmueble" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
